<?xml version="1.0" encoding="utf-8"?>
<ViewAnimator xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:wheel="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/viewAnimator"
    android:padding="@dimen/dialog_padding_border">

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        wheel:matProg_barColor="#5588FF"
        wheel:matProg_progressIndeterminate="true" />

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:layout_width="@dimen/dialog_avatar_size"
        android:layout_height="@dimen/dialog_avatar_size"
        android:id="@+id/ivAvatarDialog"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvLoginDialog"
        android:layout_below="@+id/ivAvatarDialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvReposDialog"
        android:layout_below="@+id/tvLoginDialog"
        android:layout_alignLeft="@+id/tvLoginDialog"
        android:layout_alignStart="@+id/tvLoginDialog" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvCreatedDialog"
        android:layout_below="@+id/tvReposDialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_button"
        android:id="@+id/btnView"
        android:layout_below="@+id/tvCreatedDialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dialog_padding_border"/>


</RelativeLayout>

</ViewAnimator>
